{
  "name": "ApiProvider",
  "type": "object",
  "properties": {
    "provider_name": {
      "type": "string",
      "enum": [
        "OpenAI",
        "Anthropic",
        "Google Gemini",
        "Cohere",
        "Mistral AI",
        "Local LM Studio"
      ],
      "description": "AI provider name"
    },
    "api_key": {
      "type": "string",
      "description": "API key for the provider"
    },
    "api_endpoint": {
      "type": "string",
      "description": "Custom API endpoint if needed"
    },
    "model_name": {
      "type": "string",
      "description": "Default model to use"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether this provider is currently active"
    },
    "is_default": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is the default provider"
    }
  },
  "required": [
    "provider_name"
  ]
}